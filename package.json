{
  "name": "typescript-tutorial",
  "version": "1.0.0",
  "description": "TypeScript 教程",
  "scripts": {
    "compiler": "tsc ./src/index.ts --outDir dist",
    "dev": "nodemon -e ts --exec ts-node ./src/index.ts"
  },
  "keywords": [
    "TypeScript",
    "TypeScript Tutorial",
    "TypeScript 教程"
  ],
  "author": {
    "name": "若非",
    "email": "rf.wangchn@gmail.com"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
